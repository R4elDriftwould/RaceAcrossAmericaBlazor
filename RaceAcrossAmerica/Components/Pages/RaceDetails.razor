@page "/race/{RaceId:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@* @rendermode InteractiveServer *@
@using RaceAcrossAmerica.Data
@using RaceAcrossAmerica.Services
@inject RaceManagerService RaceService
@inject NavigationManager NavManager

@if (_race == null)
{
    <p><em>Loading race data...</em></p>
}
else
{
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>@_race.Title</h3>
            <span class="badge bg-primary">@_race.TotalDistanceMiles Miles</span>
        </div>

        <a href="/tracker/@_race.Id" class="btn btn-warning">Launch Tracker</a>

        <div class="row">

            <div class="col-md-8">
                <div class="card p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5>Checkpoint Manager</h5>
                    </div>

                    @* Div for Map and Checkpoint Pins, with a Ghost pin for viewing new Checkpoint *@
                    <div class="mb-4 border rounded" style="position: relative; width: 100%; aspect-ratio: 16/9; background-color: #e9ecef; overflow: hidden;">

                        <img src="/images/us_map.png" style="width: 100%; height: 100%; object-fit: cover; opacity: 0.8;" />

                        @foreach (var cp in _race.Checkpoints)
                        {
                            <div title="@cp.Name"
                                 style="position: absolute;
                                                left: @(cp.MapPositionX)%;
                                                top: @(cp.MapPositionY)%;
                                                width: 10px; height: 10px;
                                                background-color: blue;
                                                border-radius: 50%;
                                                transform: translate(-50%, -50%);
                                                z-index: 1;">
                            </div>
                        }

                        <div title="New Checkpoint Preview"
                             style="position: absolute;
                                        left: @(_newCheckpoint.MapPositionX)%;
                                        top: @(_newCheckpoint.MapPositionY)%;
                                        width: 16px; height: 16px;
                                        background-color: #00ff00;
                                        border: 2px solid white;
                                        border-radius: 50%;
                                        transform: translate(-50%, -50%);
                                        z-index: 10;
                                        box-shadow: 0 0 10px #00ff00;">
                        </div>

                        <div style="position: absolute; bottom: 5px; right: 5px; background: rgba(255,255,255,0.8); padding: 2px 5px; font-size: 0.8rem;">
                            X: @_newCheckpoint.MapPositionX% | Y: @_newCheckpoint.MapPositionY%
                        </div>
                    </div>

                    @* Div for Adding checkpoint and adjusting X and Y position before saving *@
                    <div class="card bg-light p-3 mb-3">
                        <h6>Add New Checkpoint</h6>
                        <div class="row g-2 mb-2">
                            <div class="col-md-8">
                                <label class="small text-muted">Name</label>
                                <input type="text" class="form-control form-control-sm" placeholder="City Name"
                                       @bind-value="_newCheckpoint.Name" />
                            </div>
                            <div class="col-md-4">
                                <label class="small text-muted">Miles</label>
                                <input type="number" class="form-control form-control-sm" placeholder="0"
                                       @bind-value="_newCheckpoint.DistanceFromStart" />
                            </div>
                        </div>

                        <div class="row g-2 mb-2">
                            <div class="col-12">
                                <label class="small text-muted">Description (Map Popup Info)</label>
                                <input type="text" class="form-control form-control-sm"
                                       placeholder="e.g. 'Water station near the park entrance'"
                                       @bind-value="_newCheckpoint.Description" />
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="col-md-3">
                                <label class="small text-muted">Map X %</label>
                                <input type="number" class="form-control form-control-sm"
                                       @bind-value="_newCheckpoint.MapPositionX"
                                       @bind-value:event="oninput"
                                       min="0" max="100" />
                            </div>
                            <div class="col-md-3">
                                <label class="small text-muted">Map Y %</label>
                                <input type="number" class="form-control form-control-sm"
                                       @bind-value="_newCheckpoint.MapPositionY"
                                       @bind-value:event="oninput"
                                       min="0" max="100" />
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button class="btn btn-sm btn-success w-100" @onclick="HandleAddCheckpoint">Save Checkpoint</button>
                            </div>
                        </div>
                    </div>

                    @if (_race.Checkpoints.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Location</th>
                                        <th>Distance</th>
                                        <th>Coords (X,Y)</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cp in _race.Checkpoints.OrderBy(c => c.DistanceFromStart))
                                    {
                                        <tr>
                                            <td>@cp.Name</td>
                                            <td>@cp.DistanceFromStart mi</td>
                                            <td class="small text-muted">(@cp.MapPositionX%, @cp.MapPositionY%)</td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-danger py-0"
                                                        @onclick="() => HandleDeleteCheckpoint(cp.Id)">
                                                    ×
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No checkpoints set. Add the Start Line (0 miles)!</p>
                    }
                </div>
            </div>

            @* 
            Div for displaying students participating 
            using foreach loop on _race.RaceParticipants 
            *@
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>Students</h5>

                    @if (_race.RaceParticipants.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var p in _race.RaceParticipants)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@p.Student?.FullName</span>
                                    <span class="badge bg-secondary">@p.LapsCompleted Laps</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No students yet.</p>
                    }

                    <div class="mt-3">
                        <label class="form-label small text-muted">Add Student to Race:</label>
                        <div class="input-group">
                            <select class="form-select" @bind="_selectedStudentId">
                                <option value="0">Select a student...</option>
                                @foreach (var student in _allStudents)
                                {
                                    <option value="@student.Id">@student.FullName</option>
                                }
                            </select>

                            <button class="btn btn-success" @onclick="HandleAddStudentToRace">
                                Add
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


@code {
    // Get RaceId from parameter
    // Logic: Fetch _race based on RaceId using RaceService.GetRaceByIdAsync
    [Parameter]
    public int RaceId { get; set; }

    private Race? _race;

    // Initialize this with default 50,50 so the dot appears in the middle at first
    private Checkpoint _newCheckpoint = new() { MapPositionX = 50, MapPositionY = 50 };

    // Task 6
    // Add Student List on Load
    // Select student dropdown
    // Handle Adding Student to Race

    private List<Student> _allStudents = new();
    private int _selectedStudentId;

    protected override async Task OnInitializedAsync()
    {
        _race = await RaceService.GetRaceByIdAsync(RaceId);

        // If race cannot be found, navigate back to home
        if(_race == null)
        {
            NavManager.NavigateTo("/");
        }

        _allStudents = await RaceService.GetAllStudentsAsync();
    }

    private async Task LoadRaceData()
    {
        _race = await RaceService.GetRaceByIdAsync(RaceId);
        if (_race == null) NavManager.NavigateTo("/");
    }

    private async Task HandleAddCheckpoint()
    {
        if (string.IsNullOrWhiteSpace(_newCheckpoint.Name)) return;

        // Link the checkpoint to THIS race
        _newCheckpoint.RaceId = RaceId;

        // Save
        await RaceService.AddCheckpointAsync(_newCheckpoint);

        // Reset the form (Reset X/Y to center for the next one)
        _newCheckpoint = new Checkpoint { MapPositionX = 50, MapPositionY = 50 };

        // Refresh the list
        await LoadRaceData();
    }

    private async Task HandleDeleteCheckpoint(int id)
    {
        await RaceService.DeleteCheckpointAsync(id);
        await LoadRaceData();
    }

    // Task 6 - Handle Adding Student to RaceParticipants for Race
    private async Task HandleAddStudentToRace()
    {
        // Validation
        if (_selectedStudentId == 0) return;
        // Run the service to add the student to Student Table
        await RaceService.AddStudentToRaceAsync(RaceId, _selectedStudentId);

        _selectedStudentId = 0;

        await LoadRaceData();
    }
}
