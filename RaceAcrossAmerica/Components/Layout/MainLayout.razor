@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">Race Across America</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-4">Hello, @context.User.Identity?.Name</MudText>
                <form action="Account/Logout" method="post">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary">Logout</MudButton>
                    <AntiforgeryToken />
                    <input type="hidden" name="returnUrl" value="" />
                </form>
            </Authorized>
            <NotAuthorized>
                <MudButton Link="Account/Login" Variant="Variant.Text" Color="Color.Inherit">Login</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    /* SMART BOARD FIX: 
       This forces the browser to treat touches as "taps" instead of waiting 
       to see if you are trying to scroll. 
    */
    .mud-button-root, 
    .mud-icon-button, 
    .mud-chip, 
    .mud-list-item,
    button, 
    a {
        touch-action: manipulation !important;
    }

    /* OPTIONAL: NUCLEAR RIPPLE REMOVAL
       If buttons still get stuck "blue" without clicking, 
       uncommenting the lines below will delete the animation entirely.
    */
    /*
    .mud-ripple {
        display: none !important;
    }
    */
</style>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
